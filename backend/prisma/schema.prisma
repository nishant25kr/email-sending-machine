generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmailBatch {
  id            String   @id @default(uuid())
  subject       String
  body          String
  startTime     DateTime
  delaySeconds  Int
  hourlyLimit   Int
  createdAt     DateTime @default(now())

  emails        Email[]
}

model Email {
  id          String   @id @default(uuid())
  batchId     String
  toEmail     String
  scheduledAt DateTime
  sentAt      DateTime?
  status      String
  error       String?

  batch EmailBatch @relation(fields: [batchId], references: [id])

  @@unique([batchId, toEmail])
}
